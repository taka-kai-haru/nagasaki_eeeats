<% provide(:title, "パスワード再設定") %>

<div class="row">
  <div class="col-lg-6 col-xs-12 bg-white rounded  pd-20 mb-10 rounded-center">

    <h2 class='display-4 text-center page_title'>パスワード再設定</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        <%= render 'devise/shared/error_message_detail', {object: f.object, target: :email} %>
      </div>

      <div class="actions text-center mb-20 mt-20">
        <%= f.submit "パスワード再設定メール送信", class: "btn btn-info w-75" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

