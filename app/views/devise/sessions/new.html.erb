<% provide(:title, "ログイン") %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-xs-12 bg-white rounded pd-20 mb-10 rounded-center">
      <h1 class="text-center page_title">ログイン</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        <%= render 'devise/shared/error_message_detail',{object: f.object, target: :email} %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <% if resource.email == 'testuser@example.com' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', value: 'testuser' %>
        <% else %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        <% end %>
        <%= render 'devise/shared/error_message_detail',{object: f.object, target: :password} %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field custom-control custom-checkbox ">
          <%= f.check_box :remember_me, class: 'custom-control-input' %>
          <%= f.label :remember_me, class: 'custom-control-label'%>
        </div>
      <% end %>

      <div class="actions text-center mb-20">
        <%= f.submit "ログイン", class: "btn btn-info w-75",id:"login" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
      <div class="mt-10">
        <%= link_to "＜戻る", :back, class: 'btn btn-outline-info' %>
      </div>
    </div>
  </div>
</div>

