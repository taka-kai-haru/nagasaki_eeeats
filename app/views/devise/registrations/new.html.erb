<% provide(:title, "ユーザー登録") %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6 col-xs-12 bg-white rounded  pd-20 mb-10 rounded-center">
      <h2 class="h2">ユーザー登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", object: f.object %>

        <div class="field">
          <%= f.label :name %>
          <em>  <%= User::NAME_MAXMUM %>文字以下</em>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
          <%= render 'devise/shared/error_message_detail',{object: f.object, target: :name} %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
          <%= render 'devise/shared/error_message_detail',{object: f.object, target: :email} %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <%= render 'devise/shared/error_message_detail',{object: f.object, target: :password} %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          <%= render 'devise/shared/error_message_detail',{object: f.object, target: :password_confirmation} %>
        </div>

        <div class="field">
          <%= f.label :release %>
          <div class="switchArea">
            <%= f.check_box :release, autocomplete: "release", id: 'switch1' %>
            <label for="switch1"><span></span></label>
            <div id="swImg"></div>
          </div>
        </div>

        <div class="actions text-center mt-10 mb-20">
          <%= f.submit "ユーザー登録", class: "btn btn-info w-75"%>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

