<% provide(:title, "お店一覧") %>

<% if user_signed_in? %>
  <%= link_to "変更", edit_restaurant_path, class: "btn  btn-info" %>
  <%= link_to "+新規登録", post_path, restaurant_id: @restaurant.id, class: "btn  btn-info" %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="bg-white rounded">
      <h3 class="h3">お店の名前</h3>
      <p><%= @restaurant.name%></p>
      <h3 class="h3">ジャンル</h3>
      <p><%= @restaurant_type.name%></p>
      <h3 class="h3">電話番号</h3>
      <p><%= @restaurant.tel%></p>
      <h3 class="h3">URL</h3>
      <p><%= @restaurant.url%></p>
      <h3 class="h3">地域</h3>
      <p><%= @area.areas_name%></p>
      <h3 class="h3">住所</h3>
      <p><%= @restaurant.address%></p>
    </div>
  </div>
</div>